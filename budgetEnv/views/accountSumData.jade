.main-content
    #accountSumData(data-bind='with: accountSumData')
        div.clearfix
            label.formLeftCol
                span(data-bind='text: Name')
                |  Balance
            div.formRightCol(data-bind='text: formatCurrency(AccountSum)')
        div.clearfix
            label.formLeftCol
                span(data-bind='text: Name')
                |  Pending
            div.formRightCol(data-bind='text: formatCurrency(AccountPending)')
        div.clearfix
            label.formLeftCol
                span(data-bind='text: Name')
                |  Grand Total
            div.formRightCol(data-bind='text: Name')
        div.clearfix
            label.formLeftCol(for='txtAccountWebsite')
                span(data-bind='text: Name')
                |  From Website
            input#txtAccountWebsite.formRightCol(type='number', data-bind='value: formatCurrency(ExternalTotal)', style='width: 80px')
        div.clearfix
            label.formLeftCol
                span(data-bind='text: Name')
                |  Difference
            div.formRightCol(data-bind='text: Name')